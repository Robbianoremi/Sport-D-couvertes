

{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="section py-3">
    <div class="container-fluid mt-5 ">
        <div class="row">
            <div class="col-lg-6 col-md-8 border shadow py-4 px-5 rounded">
                <h1 class="mb-4 text-center">Contact</h1>
                <p class="mb-4 text-center">Veuillez remplir le formulaire ci-dessous pour nous contacter.</p>

                {{ form_start(contact_form) }}
                    <div class="mb-3">
                        {{ form_label(contact_form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(contact_form.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(contact_form.name, {'attr': {'class': 'text-danger'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(contact_form.firstName, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(contact_form.firstName, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(contact_form.firstName, {'attr': {'class': 'text-danger'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(contact_form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(contact_form.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(contact_form.email, {'attr': {'class': 'text-danger'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(contact_form.objet, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(contact_form.objet, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(contact_form.objet, {'attr': {'class': 'text-danger'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(contact_form.text, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(contact_form.text, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(contact_form.text, {'attr': {'class': 'text-danger'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(contact_form.createdAt, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(contact_form.createdAt, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(contact_form.createdAt, {'attr': {'class': 'text-danger'}}) }}
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Envoyer</button>
                {{ form_end(contact_form) }}
            </div>
            <div class="col-lg-6  pt-5 px-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Coordonnées</h5>
                        <p class="card-text">Vous pouvez nous contacter aux coordonnées suivantes :</p>
                        <ul class="list-unstyled">
                            <li class="fw-semibold">Adresse:</li>
                            <p>410c chemin de la croix des signaux, <br>83740 La Cadière-d'Azur, France</p>
                            <li class="fw-semibold">Téléphone:</li>
                            <p>+33 (0)6 17 35 28 37</p>
                            <li class="fw-semibold">Email:</li>
                            <p>skipperservicebsm@gmail.com</p>
                        </ul>
                    </div>
                    <!-- Emplacement pour le QR code -->
                    <div class="card-footer ">
                        <div class="col text-center">
                            <p>QR Code</p>
                            <img src="./images/qr-code facebook.png" class="img-fluid qr-code "
                                alt="QR Code facebook">
                            <img src="./images/qr-code whatsapp.png" class="img-fluid qr-code "
                                alt="QR Code whatsapp">
                            <img src="./images/qr-code instagram.png" class="img-fluid qr-code "
                                alt="QR Code instagram">
                        </div>

                    </div>
                </div>
            </div>
           
        </div>

        <div class="row mt-5 mx-auto">
            
            <div class="col-md-12">
                <h2 class="h4">Notre Localisation</h2>
                <div class="map-responsive">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2901.7077857784374!2d5.769439115656004!3d43.19702787914053!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12c9c65bb15c1d1f%3A0x4b10e75fa67c1e4!2s410C%20Chemin%20de%20la%20Croix%20des%20Signaux%2C%2083740%20La%20Cadi%C3%A8re-d&#39;Azur%2C%20France!5e0!3m2!1sen!2sfr!4v1625912345678!5m2!1sen!2sfr" width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy"></iframe>

                </div>
            </div>
        </div>
    </div>
</div>




{% endblock %}



